{
  "name": "link-planit",
  "scripts": {
    "build": "run-s tailwind bundle",
    "dev": "run-p start tailwind-watch bundle-watch",
    "start": "serve -p 8080 public",
    "bundle": "rollup -c",
    "bundle-watch": "rollup -c -w",
    "tailwind": "npx tailwindcss -o public/css/output.css",
    "tailwind-watch": "npx tailwindcss -o public/css/output.css --watch"
  },
  "dependencies": { "tslib": "^2.6.2" },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.36.2",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "tailwindcss": "^3.2.1",
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
